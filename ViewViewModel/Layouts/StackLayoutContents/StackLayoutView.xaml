<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyFirstMobileApp.ViewViewModel.Layouts.StackLayoutContents.StackLayoutView"
             Title="StackLayoutView">


    <StackLayout>

        <!-- SkyBlueBox -->
        <StackLayout Margin="35"
             VerticalOptions="Center"
             HorizontalOptions="Center">

            <BoxView WidthRequest="120"
                     HeightRequest="120"
                     Color="SkyBlue" />
        </StackLayout>

        <!-- LightGreen Box -->
        <StackLayout VerticalOptions="Center"
                     HorizontalOptions="End" >

            <BoxView WidthRequest="160"
                     HeightRequest="80"
                     Color="LightGreen" />
        </StackLayout>

        <!-- LightPink Box-->
        <StackLayout VerticalOptions="EndAndExpand"
                     HorizontalOptions="StartAndExpand" >

            <BoxView WidthRequest="80"
                     HeightRequest="160"
                     Color="LightPink" />
        </StackLayout>


    </StackLayout>

</ContentPage>