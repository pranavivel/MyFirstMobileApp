<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyFirstMobileApp.ViewViewModel.Layouts.VerticalStackContents.VerticalStackView"
             Title="VerticalStackView">
    <VerticalStackLayout>

        <StackLayout>

            <StackLayout>

                <!--- Red Box -->
                <BoxView WidthRequest="90"
                     HeightRequest="90"
                     Color="Red" />
                
                <!--- Green Box -->
                <BoxView WidthRequest="90"
                     HeightRequest="90"
                     Color="Green" />

                <!--- Blue Box -->
                <BoxView WidthRequest="90"
                     HeightRequest="90"
                     Color="Blue" />

                <!--- Purple Box -->
                <BoxView HorizontalOptions="EndAndExpand"
                     WidthRequest="90"
                     HeightRequest="90"
                     Color="Purple" />
            </StackLayout>


        </StackLayout>

    </VerticalStackLayout>
</ContentPage>